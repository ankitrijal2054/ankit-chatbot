# API keys
GOOGLE_API_KEY=your-google-api-key-here
CARTESIA_API_KEY=your-cartesia-api-key-here

# Embeddings model (default: MiniLM-L6-v2 from Hugging Face)
EMBEDDINGS_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Directory for storing vector DB or cache
PERSIST_DIRECTORY=chroma_db

# Allowed frontend origins for CORS
CORS_ORIGINS=["http://localhost:8080", "https://your-site.com"]

# Default voice ID for Cartesia TTS
CARTESIA_VOICE_ID=your-cartesia-voice-id-here
